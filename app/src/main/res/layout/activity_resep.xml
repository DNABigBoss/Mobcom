<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".resep">

    <ImageView
        android:id="@+id/gambar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/oreo" />

    <ImageView
        android:id="@+id/gradient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gradiengambar" />

    <ImageView
        android:id="@+id/tombolback"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/titik3kanan" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="30dp"
        android:layout_height="37dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toStartOf="@+id/imageView8"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tombolback"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/save" />

    <LinearLayout
        android:layout_width="417dp"
        android:layout_height="415dp"
        android:layout_marginTop="316dp"
        android:background="@drawable/bground"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="202dp"
                    android:layout_height="80dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="79dp"
                    android:layout_toStartOf="@+id/imageView10"
                    android:fontFamily="@font/poppins_medium"
                    android:lineSpacingExtra="-8sp"
                    android:text="@string/judulresep"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="55.83dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="42dp"
                    app:srcCompat="@drawable/mulai" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="64dp"
                    android:layout_height="36dp"
                    android:layout_below="@+id/imageView10"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="37dp"
                    android:text="Mulai Memasak"
                    android:textAlignment="center"
                    android:textColor="#EC407A"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_below="@+id/textView5"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="11dp"
                    app:srcCompat="@drawable/view" />

                <TextView
                    android:id="@+id/numberview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView5"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="11dp"
                    android:layout_toEndOf="@+id/imageView11"
                    android:text="@string/viewerresep"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_below="@+id/textView5"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="11dp"
                    android:layout_toEndOf="@+id/numberview"
                    app:srcCompat="@drawable/bookmark" />

                <TextView
                    android:id="@+id/numberbookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView5"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="11dp"
                    android:layout_toEndOf="@+id/imageView12"
                    android:text="@string/savedresep"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_below="@+id/textView5"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:layout_toEndOf="@+id/numberbookmark"
                    app:srcCompat="@drawable/comment" />

                <TextView
                    android:id="@+id/numbercomment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView5"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="11dp"
                    android:layout_toEndOf="@+id/imageView13"
                    android:text="@string/commentresep"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="334dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView11"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="25dp"
                    app:srcCompat="@drawable/line" />

            </RelativeLayout>


        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="254dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="-6dp"
                android:layout_marginBottom="49dp"
                android:text="TextView" />
        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>